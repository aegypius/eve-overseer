{
  "name": "eve-overseer-gateway",
  "version": "0.0.1",
  "description": "EVE Overseer Gateway",
  "main": "lib/index.js",
  "scripts": {
    "lint": "xo | tee",
    "test": "npm run lint && nyc --cache --reporter=lcov --reporter=text ava",
    "build": "babel src -d lib",
    "start": "babel-node src/index.js"
  },
  "author": "Nicolas LAURENT <innercircle@aegypius.com>",
  "license": "MIT",
  "dependencies": {
    "amqp": "^0.2.6",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cors": "^2.7.1",
    "express": "^4.14.0",
    "goodly": "^0.3.2",
    "jsonwebtoken": "^7.1.6",
    "mongorito": "^2.1.2",
    "morgan": "^1.7.0",
    "request": "^2.74.0",
    "request-promise": "^4.0.2",
    "validator": "^5.5.0",
    "winston": "^2.2.0",
    "winston-amqp": "0.0.3"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-3": "^6.9.0",
    "casual": "^1.5.3",
    "chai": "^3.5.0",
    "nyc": "^7.1.0",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.2.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "ignores": [
      "lib/**/*"
    ],
    "esnext": true,
    "space": 2
  },
  "ava": {
    "files": [
      "test/*",
      "!test/bootstrap.js"
    ],
    "source": [
      "src/**/*.{js,jsx}"
    ],
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
