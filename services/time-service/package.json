{
  "name": "time-service",
  "version": "1.0.0",
  "description": "Expose the time",
  "main": "lib/index.js",
  "scripts": {
    "lint": "xo | tee",
    "test": "npm run lint && nyc --cache --reporter=lcov --reporter=text ava --verbose",
    "build": "babel src -d lib",
    "start": "babel-node index.js"
  },
  "author": "Nicolas LAURENT <innercircle@aegypius.com>",
  "license": "MIT",
  "dependencies": {
    "goodly": "^0.3.2",
    "moment": "^2.14.1"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.10.1",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-3": "^6.11.0",
    "nyc": "^7.1.0",
    "timekeeper": "^0.1.1",
    "xo": "^0.16.0"
  },
  "xo": {
    "ignores": [
      "lib/**/*"
    ],
    "esnext": true,
    "space": 2
  },
  "ava": {
    "files": [
      "test/*",
      "!test/bootstrap.js"
    ],
    "source": [
      "src/**/*.{js,jsx}"
    ],
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
